<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>CUSTOM-deploy</actionName>
        <displayName>deploy</displayName>
        <goals>
            <goal>deploy</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-Clean and Build (snapshots)</actionName>
        <displayName>Clean and Build (snapshots)</displayName>
        <goals>
            <goal>clean</goal>
            <goal>install</goal>
        </goals>
    </action>
    <action>
        <actionName>run</actionName>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.1.1:exec</goal>
        </goals>
        <activatedProfiles>
            <activatedProfile>cismet-dev-exec</activatedProfile>
        </activatedProfiles>
        <properties>
            <jalopy.skip>true</jalopy.skip>
            <exec.classpathScope>runtime</exec.classpathScope>
            <exec.args>-Xmx2048m -Duser.country=DE -Duser.language=de -Xdebug -Xrunjdwp:transport=dt_socket,server=y,address=8817,suspend=n -classpath ${de.cismet.cids.classpath} de.cismet.lagis.gui.main.LagisApp -u "http://localhost:9917/callserver/binary" -c "Sirius.navigator.connection.RESTfulConnection" -d "LAGIS"</exec.args>
            <!--<exec.args>-Xmx512m -Duser.country=DE -Duser.language=de -Xdebug -Xrunjdwp:transport=dt_socket,server=y,address=8817,suspend=n -classpath ${de.cismet.cids.classpath} de.cismet.lagis.gui.main.LagisApp -u "https://geoportal.wuppertal.de:8084/callserver/binary" -c "Sirius.navigator.connection.RESTfulConnection" -d "LAGIS"</exec.args>-->
            <exec.executable>java</exec.executable>
            <exec.workingdir>${de.cismet.cids.navigator.workingDir.wunda}</exec.workingdir>
        </properties>
    </action>
   
    <action>
        <actionName>debug</actionName>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.1.1:exec</goal>
        </goals>
        <activatedProfiles>
            <activatedProfile>nb-exec</activatedProfile>
        </activatedProfiles>
        <properties>
            <jalopy.skip>true</jalopy.skip>
            <exec.classpathScope>runtime</exec.classpathScope>
            <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Xmx2048m -classpath %classpath de.cismet.lagis.gui.main.LagisApp -u "http://localhost:9917/callserver/binary" -c "Sirius.navigator.connection.RESTfulConnection" -d "LAGIS"</exec.args>
            <jpda.listen>true</jpda.listen>
            <exec.executable>java</exec.executable>
            <exec.workingdir>${de.cismet.cids.navigator.workingDir.wunda}</exec.workingdir>
        </properties>
    </action>
    <action>
        <actionName>profile</actionName>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.1.1:exec</goal>
        </goals>
        <activatedProfiles>
            <activatedProfile>nb-exec</activatedProfile>
        </activatedProfiles>
        <properties>
            <jalopy.skip>true</jalopy.skip>
            <exec.classpathScope>runtime</exec.classpathScope>
            <exec.args>${profiler.args} -Xmx512m -classpath %classpath de.cismet.lagis.gui.main.LagisApp -u "http://localhost:9917/callserver/binary" -c "Sirius.navigator.connection.RESTfulConnection" -d "LAGIS"</exec.args>
            <profiler.action>profile</profiler.action>
            <exec.executable>${profiler.java}</exec.executable>
            <exec.workingdir>${de.cismet.cids.navigator.workingDir.wunda}</exec.workingdir>
        </properties>
    </action>
    <action>
            <actionName>CUSTOM-Server</actionName>
            <displayName>run-simple-server</displayName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.1.1:exec</goal>
            </goals>
            <properties>
                <jalopy.skip>true</jalopy.skip>
                <exec.classpathScope>runtime</exec.classpathScope>
                <exec.workingdir>${de.cismet.cids.server.workingDir.lagis.simple.leo}</exec.workingdir>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=y,address=8999,suspend=n -Xmx1024m -classpath ${de.cismet.cids.classpath} Sirius.server.middleware.impls.domainserver.DomainServerImpl runtime.properties</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
            <activatedProfiles>
                <activatedProfile>cismet-dev-exec</activatedProfile>
            </activatedProfiles>
        </action>
</actions>
